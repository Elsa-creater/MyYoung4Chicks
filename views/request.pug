extends layout 
block content 
    header
        meta(charset='UTF-8')
        title Young4Chicks Request Form
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
        .form-container
        h2.form-title Young4Chicks Request Form
        form#requestform(action="/addrequest")
            .mb-3
            label.form-label(for='fullName') Full Name
            input#fullName.form-control(type='text' placeholder='Enter your full name')
            .mb-3
            label.form-label(for='phoneNumber') Phone Number
            input#phoneNumber.form-control(type='tel' placeholder='+256...')
            .mb-3
            label.form-label(for='location') Delivery Location
            input#location.form-control(type='text' placeholder='District or village')
            .mb-3
            label.form-label(for='chickType') Type of Chicks
            select#chickType.form-select
                option(selected='' disabled='') -- Select Chick Type --
                option Broilers
                option Layers
                option Kuroilers
                option Sasso
                option Local (Indigenous)
            .mb-3
            label.form-label(for='quantity') Quantity
            input#quantity.form-control(type='number' placeholder='Enter number of chicks')
            .mb-3
            label.form-label(for='preferredDate') Preferred Delivery Date
            input#preferredDate.form-control(type='date')
            .mb-3
            label.form-label(for='additionalNotes') Additional Notes (optional)
            textarea#additionalNotes.form-control(rows='3' placeholder='Anything else we should know?')
            .d-grid
            button.btn.btn-custom(type='submit') Submit